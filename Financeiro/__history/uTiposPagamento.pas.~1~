unit uTipoPagamento;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.Win.ADODB, Vcl.StdCtrls;

type
  TfrmTipoPagamento = class(TForm)
    Label1: TLabel;
    edtNome: TEdit;
    chkAtivo: TCheckBox;
    btnCadastrar: TButton;
    btnVoltar: TButton;
    ADOCommand1: TADOCommand;
    procedure btnVoltarClick(Sender: TObject);
    procedure btnCadastrarClick(Sender: TObject);
  private
    procedure CadastrarTipoPagamento;
  public
    { Public declarations }
  end;

var
  frmTipoPagamento: TfrmTipoPagamento;

implementation

{$R *.dfm}

procedure TfrmTipoPagamento.btnCadastrarClick(Sender: TObject);
begin
  if edtNome.Text = '' then
    ShowMessage('Não deixe o campo em branco!')
  else
  begin
    if chkAtivo.Checked = true then
      ADOCommand1.CommandText := 'insert into tipo_pagamento values(null, "' +
        edtNome.Text + '", "S");'
    else
      ADOCommand1.CommandText := 'insert into tipo_pagamento values(null, "' +
        edtNome.Text + '", "N");';

    ADOCommand1.Execute;

    edtNome.Text := '';
    chkAtivo.Checked := true;

    ShowMessage('Tipo de Pagamento cadastrado com sucesso!');

    edtNome.SetFocus;
  end;
end;


procedure TfrmTipoPagamento.CadastrarTipoPagamento;
begin

end;


procedure TfrmTipoPagamento.btnVoltarClick(Sender: TObject);
begin
  self.Close;
end;

end.
